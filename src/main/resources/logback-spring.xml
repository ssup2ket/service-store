<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5p [YourApp:%thread:%X{X-B3-TraceId}:%X{X-B3-SpanId}] %logger{40} - %msg%n
            </pattern>
        </encoder>
    </appender>
    <appender name="jsonstdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <mdcKeyFieldName>traceId=trace_id</mdcKeyFieldName>
            <mdcKeyFieldName>spanId=span_id</mdcKeyFieldName>
        </encoder>
    </appender>
    <root level="info">
    <springProfile name="local">
      <appender-ref ref="stdout" />
    </springProfile>
    <springProfile name="!local">
      <appender-ref ref="jsonstdout" />
    </springProfile>
  </root>
</configuration>